<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_rating_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:showIn="@layout/activity_main"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="false"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/rating_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="EPLB"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_date_list_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_name"
            android:layout_alignParentStart="true">


            <RelativeLayout
                android:id="@+id/layout_valid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="5dp"

                >

                <TextView
                    android:id="@+id/text_valid_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ważne do" />

                <TextView
                    android:id="@+id/date_valid_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_valid_to"
                    android:text="21 09 2021"
                    android:textColor="@color/black"
                    android:textSize="34dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_shift_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/layout_add_shift">

                <TextView
                    android:id="@+id/text_shift_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="dyżury" />

                <ImageView
                    android:id="@+id/image_shift_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_shift_list"
                    android:src="@drawable/baseline_list_black_48" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_add_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"

                >

                <TextView
                    android:id="@+id/add_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="dodaj" />

                <ImageView
                    android:id="@+id/image_add_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_shift"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/baseline_add_black_48" />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>